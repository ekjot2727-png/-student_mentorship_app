# ==================== REQUIRED ====================
# JWT Secret - use a long random string
SESSION_SECRET=mentor_connect_dev_secret_key_2024_development_only

# Database - PostgreSQL connection string
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/mentorconnect

# Server port
PORT=5000

# ==================== JWT Configuration ====================
# Access token expiry (short-lived)
JWT_ACCESS_EXPIRES=15m

# Refresh token expiry (long-lived)
JWT_REFRESH_EXPIRES=30d

# ==================== CORS Configuration ====================
# Client origin - restrict to your frontend URL
CLIENT_ORIGIN=http://localhost:5173

# ==================== Security ====================
# Session booking conflict window (in minutes)
SESSION_CONFLICT_WINDOW=30

# ==================== Environment ====================
# development | production | test
NODE_ENV=development

# ==================== Logging ====================
# Log level: debug | info | warn | error
LOG_LEVEL=debug
