# Database Configuration
# Required: PostgreSQL database URL
DATABASE_URL=postgresql://user:password@localhost:5432/mentorconnect

# Session Secret (used for JWT signing)
# Generate a random string for production
SESSION_SECRET=mentor_connect_dev_secret_key_2024_development_only

# Optional: Server Port (defaults to 5000)
PORT=5000

# Optional: Node Environment
NODE_ENV=development

# JWT Configuration
JWT_ACCESS_EXPIRES=15m
JWT_REFRESH_EXPIRES=30d

# CORS Configuration
CLIENT_ORIGIN=http://localhost:5173

# Security
SESSION_CONFLICT_WINDOW=30

# Logging
LOG_LEVEL=debug
